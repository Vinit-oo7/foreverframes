{
  "name": "MemoryBox",
  "short_name": "MemoryBox",
  "description": "Privately store and relive your memories.",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["standalone", "window-controls-overlay"],
  "background_color": "#ffc8dd",
  "theme_color": "#ffc8dd",
  "orientation": "portrait",
  "lang": "en",
  "categories": ["photo", "video", "lifestyle"],
  "prefer_related_applications": false,

  "share_target": {
    "action": "/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },

  "icons": [
    {
      "src": "/logo.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ]
}
